<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.jimmy.revive"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.jimmy.revive.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.jimmy.revive.sample.lifecycle.TestLifecycleActivity"/>

        <activity android:name="com.jimmy.revive.sample.lifecycle.TestResultActivity"/>

        <activity android:name="com.jimmy.revive.sample.animate.transition.TestAnimateActivity"/>

        <activity android:name="com.jimmy.revive.sample.canvas.CanvasActivity"/>

        <activity android:name="com.jimmy.revive.sample.chart.ChartActivity"/>

    </application>

</manifest>